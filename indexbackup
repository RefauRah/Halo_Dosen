<?php
    include('session.php');

    if(isset($_POST['profile'])){
        $nim = $_POST['nim'];
        $jurusan = $_POST['jurusan'];
        $semester = $_POST['semester'];
        $notif = $_POST['notif_sms'];
        $sql = "UPDATE mahasiswa SET nim='".$nim."', jurusan='".$jurusan."', semester='".$semester."', notif_sms='".$notif."' WHERE id_user='".$user_id."'";

        if (mysqli_query($db, $sql)) {
            $info = "Data berhasil diperbarui";
        } else {
            $infoe = "Error updating record: " . mysqli_error($db);
        }
    }
?>
