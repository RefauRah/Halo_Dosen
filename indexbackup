    </div>
	<div class="middle">
        <?php echo $title; ?><br>
		<div class="container">
			<main class="content">
                <table border="1">
                    <tr>
                        <td>WAKTU /<br> RUANGAN</td>
                        <td>06:50-08:30</td>
						<td>06:50-09:20</td>
						<td>07:00-08:40</td>
						<td>07:00-09:30</td>
						<td>08:30-10:10</td>
						<td>08:40-10:20</td>
                        <td>08:30-11:00</td>
                        <td>08:40-11:10</td>
                        <td>09:20-11:00</td>
                        <td>09:20-11:50</td>
                        <td>09:30-11:10</td>
                        <td>09:30-12:00</td>
						<td>10:20-12:00</td>
						<td>12:40-14:20</td>
						<td>12:40-15:30</td>
						<td>14:20-16:00</td>
						<td>15:30-18:00</td>
                    </tr>
                    <?php
                        $waktu = array("06:50-08:30", "06:50-09:20", "07:00-08:40", "07:00-09:30", "08:30-10:10", "08:40-10:20", "08:30-11:00", "08:40-11:10", 
                        "09:20-11:00", "09:20-11:50", "09:30-11:10", "09:30-12:00", "10:20-12:00", "12:40-14:20", "12:40-15:30", "14:20-16:00", "15:30-18:00");
                        $sql = "select * from ruang";
                        $result = mysqli_query($db, $sql);
                        while($row = mysqli_fetch_array($result)){
                            echo '<tr>';
                            echo '<td>'.$row['KD_RUANG'].'</td>';
                            for($i=0; $i<17; $i++){
                                if(strtotime($time) >= strtotime($cek) && strtotime($time) <= strtotime($cek2))
                                    $sql2 = mysqli_query($db, "select status_kelas from jadwal where kd_ruang = '".$row['KD_RUANG']."' and waktu = '".$waktu[$i]."' and hari = DAYOFWEEK(CURDATE())+1");
                                else
                                    $sql2 = mysqli_query($db, "select status_kelas from jadwal where kd_ruang = '".$row['KD_RUANG']."' and waktu = '".$waktu[$i]."' and hari = DAYOFWEEK(CURDATE())");

                                $result2 = mysqli_fetch_array($sql2);
                                if($result2['status_kelas'] == 1)
                                    echo '<td style="background-color:red; color:white;">DIPAKAI</td>';
                                elseif($result2['status_kelas'] == 2)
                                    echo '<td style="background-color:green; color:white;">KOSONG</td>';
                                else
                                    echo '<td style="background-color:black; color:white;">NO DATA</td>';
                            }
                            echo '</tr>';
                        }
                    ?>
                </table>
            </main><!-- .content -->
		</div><!-- .container-->

